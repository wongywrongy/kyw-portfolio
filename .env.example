# ============================================
# ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your values.
# Get your Sanity credentials from: https://sanity.io/manage
# ============================================

# SANITY CMS
# -----------------------------------------
# Your Sanity project ID (found in sanity.io/manage)
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id

# Dataset name (usually "production")
NEXT_PUBLIC_SANITY_DATASET=production

# API token for server-side requests (optional, for previews)
# Create at: sanity.io/manage -> API -> Tokens
SANITY_API_TOKEN=

# ============================================
# VERCEL (auto-populated when deployed)
# ============================================
# VERCEL_URL=
